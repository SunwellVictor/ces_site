# Clark English Learning - Production Environment Configuration
# Copy this to .env on your production server and update the values

# Application Settings
APP_NAME="Clark English Learning"
APP_ENV=production
APP_KEY=base64:0qpooN5h1boY4lSULjfmaHu0X9xzZyTXX5dAYWA8Zmo=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://clarkenglish.com

# Localization
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Logging (Production optimized)
LOG_CHANNEL=daily
LOG_LEVEL=error
LOG_DEPRECATIONS_CHANNEL=null
LOG_STACK=single

# Database Configuration
# Update these with your cPanel MySQL database credentials
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=clarkenglish_main
DB_USERNAME=clarkenglish_user
DB_PASSWORD=YOUR_DATABASE_PASSWORD_HERE

# Session & Cache (Database-based for shared hosting)
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database
CACHE_PREFIX=

# Queue (Database for shared hosting)
QUEUE_CONNECTION=database

# Mail Configuration
# Update with your domain's email settings
MAIL_MAILER=smtp
MAIL_HOST=mail.clarkenglish.com
MAIL_PORT=587
MAIL_USERNAME=noreply@clarkenglish.com
MAIL_PASSWORD=YOUR_EMAIL_PASSWORD_HERE
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@clarkenglish.com"
MAIL_FROM_NAME="Clark English Learning"

# Stripe Configuration
# Use your live Stripe keys for production
STRIPE_PUBLIC=pk_live_YOUR_STRIPE_PUBLIC_KEY_HERE
STRIPE_SECRET=sk_live_YOUR_STRIPE_SECRET_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# Broadcasting (Not needed for this application)
BROADCAST_CONNECTION=log
BROADCAST_DRIVER=log

# Filesystem (Local for shared hosting)
FILESYSTEM_DISK=local

# AWS (Not used in this setup)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher (Not used in this setup)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Vite (Production settings)
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"